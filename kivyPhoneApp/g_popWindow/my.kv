<Widgets>:
    Button:
        id: btn
        size: root.width-200, root.height-200
        pos: 100,100
        text:'Come on, come on\n\n PRESS ME!' if btn.state == 'normal' else 'transfering...'
        font_size:60
        color:1, 1, 0, 1
        background_color: 0, 1, 1, 1
        on_release: root.button()

<PopWindow>:
    Label:
        text: 'pressed the button'
        size_hint: 0.6, 0.2
        pos_hint: {'x':0.2, 'top':1}
        
    Button:
        id: btn
        text: 'ha, button is here!'  if btn.state == 'normal' else ' no transition yet ^@^'
        size_hint: 0.8, 0.2
        pos_hint: {'x':0.1, 'y':0.1}